<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Chip">
        <attr name="chipText" format="string"/>
        <attr name="chipContactImage" format="reference"/>
        <attr name="chipShowClose" format="boolean"/>
        <attr name="chipShowContactImage" format="boolean"/>
        <attr name="chipShowInitial" format="boolean"/>
        <attr name="chipInitialBackgroundColor" format="color"/>
        <attr name="chipInitialTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ChipLayout">
        <attr name="chipContactType" format="enum">
            <enum name="phone_number" value="0"/>
            <enum name="email" value="1"/>
        </attr>
        <attr name="chipEditTextEnabled" format="boolean"/>
    </declare-styleable>
</resources>