<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.nasahapps.mdt.example"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.layout.ToolbarFullWidthDefaultHeightActivity"
            android:theme="@style/AppTheme.Blue"/>
        <activity
            android:name=".ui.layout.ToolbarFullWidthExtendedHeightActivity"
            android:theme="@style/AppTheme.Blue"/>
        <activity android:name=".ui.layout.ToolbarDifferentWidthsActivity"/>
        <activity
            android:name=".ui.layout.ToolbarFlexibleCardActivity"
            android:theme="@style/AppTheme.Blue"/>
        <activity
            android:name=".ui.layout.ToolbarFloatingActivity"
            android:theme="@style/AppTheme.Blue"/>
        <activity
            android:name=".ui.layout.AppBarLightActivity"
            android:theme="@style/AppTheme.ActionBar"/>
        <activity
            android:name=".ui.layout.AppBarDarkActivity"
            android:theme="@style/AppTheme.DarkActionBar"/>
        <activity
            android:name=".ui.layout.AppBarTransparentActivity"
            android:theme="@style/AppTheme.ActionBar"/>
        <activity
            android:name=".ui.layout.AppBarColoredActivity"
            android:theme="@style/AppTheme.DarkActionBar.Blue"/>
        <activity
            android:name=".ui.layout.AppBarMenuActivity"
            android:theme="@style/AppTheme.Blue"/>
        <activity
            android:name=".ui.TestActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
    </application>

</manifest>