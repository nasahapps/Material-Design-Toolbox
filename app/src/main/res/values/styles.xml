<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:tools="http://schemas.android.com/tools"
           tools:ignore="NewApi">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme.TranslucentSystemBars">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light"/>

    <style name="AppTheme.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/mdt_blue_500</item>
        <item name="colorPrimaryDark">@color/mdt_blue_700</item>
    </style>

    <style name="AppTheme.DarkActionBar.Blue">
        <item name="colorPrimary">@color/mdt_blue_500</item>
        <item name="colorPrimaryDark">@color/mdt_blue_700</item>
    </style>

    <style name="CustomButton" parent="@style/ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/mdt_red_500</item>
    </style>

</resources>
